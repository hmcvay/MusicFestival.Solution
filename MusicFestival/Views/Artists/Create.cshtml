@{
  Layout = "_Layout";
}

@model MusicFestival.Models.Artist

<h4>Add an Artist</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Name:")
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.Label("Select stage")
  @Html.DropDownList("StageId")

  <br>
  <input type="submit" value="Add new Artist" class="btn btn-default" />
  
}
<p>@Html.ActionLink("Show all artists", "Index")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>