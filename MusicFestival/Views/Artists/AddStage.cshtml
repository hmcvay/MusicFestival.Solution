@{
  Layout = "_Layout";
}

@model MusicFestival.Models.Artist

<h2> Assign a stage </h2>

<h4> Assign a stage to this Artist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ArtistId)

  @Html.Label("Select Stage")
  @Html.DropDownList("StageId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>